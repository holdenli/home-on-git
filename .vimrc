" case insensitive if search is in lowercase
set ignorecase
set smartcase
set hlsearch

" style
set t_Co=256
set background=dark
colorscheme pablo

" tabs
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set autoindent
set smartindent

" other
syntax on
set ruler
set number

set scrolloff=4
set wildmode=longest,list

